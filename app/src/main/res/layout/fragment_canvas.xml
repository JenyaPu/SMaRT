<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <LinearLayout
            android:id="@+id/drawn_sensations"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_sensations_empty_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/select_condition" />

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#eeeeee"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:animateLayoutChanges="false">

                    <com.dm.smart.BodyDrawingView
                        android:id="@+id/drawing_view_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.dm.smart.BodyDrawingView
                        android:id="@+id/drawing_view_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/switch_bodyview_roundcorner"
                        android:elevation="8dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_switch_bodyview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:background="@null"
                            android:contentDescription="@string/switch_bodyview"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="40dp"
                            android:scaleType="center" />

                        <TextView
                            android:id="@+id/textview_switch_bodyview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:clickable="false"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_min_intensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:gravity="end" />

                    <com.dm.smart.ui.elements.combo_seekbar.ComboSeekBar
                        android:id="@+id/intensity_scale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textview_max_intensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp"
                        android:gravity="start" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tools_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="68dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/gray_overlay_opened_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff000000" />

        </FrameLayout>

        <!-- Left bottom part (choices) -->
        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/sensations_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

            <com.dm.smart.ui.elements.vertical_button.VerticalButton
                android:id="@+id/button_sensations_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:background="@color/listview_selector_color"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:text="@string/button_sensations_toolkit" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>