<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <ImageView android:id="@+id/image_view_body" android:layout_width="441sp" android:layout_height="650sp"
        android:layout_centerInParent="true" android:contentDescription="@string/dialog_image" />

    <Button android:id="@+id/button_close" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/image_view_body" android:layout_centerHorizontal="true" android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp" android:minHeight="48dp"
        android:text="@string/dialog_close" />

</RelativeLayout>