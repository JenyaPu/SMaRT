<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-6dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="12dp" />
            <stroke
                android:width="3dp"
                android:color="@color/listview_selector_color" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>